<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
<ImageView android:id="@+id/ball"
  android:src="@drawable/greyball"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" android:clickable="true" android:focusable="true" android:focusableInTouchMode="true" android:layout_gravity="center"/>  
<TextView  
	android:id="@+id/TextViewHeadline" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/app_name" 
    android:layout_gravity="center" android:shadowColor="#000000" android:gravity="center" android:shadowRadius="3" android:shadowDy="2" android:shadowDx="2"/>
</LinearLayout>
